<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgSong"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTenBaiHat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/secondColor"
        app:layout_constraintStart_toEndOf="@id/imgSong"
        app:layout_constraintTop_toTopOf="@id/imgSong"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/txtCaSi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ca sĩ"
        android:textColor="@color/secondColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/txtTenBaiHat"
        app:layout_constraintTop_toBottomOf="@id/txtTenBaiHat" />

    <!-- More-options button -->
    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_horiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16px"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
